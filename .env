# Ethereum WebSocket RPC URL
# Using public Ethereum node (no API key required)
ETH_WEBSOCKET_URL=wss://ethereum-rpc.publicnode.com

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=blockchain.txs.raw
KAFKA_MAX_RETRIES=3
KAFKA_RETRY_TIMEOUT=30000

# Transaction fetching configuration
# Maximum concurrent transaction fetches
MAX_CONCURRENT_FETCHES=10
# Timeout for fetching transaction details (ms)
FETCH_TIMEOUT=5000

# Auto-Reconnection Configuration
AUTO_RECONNECT=true
MAX_RECONNECT_ATTEMPTS=0
RECONNECT_DELAY=1000
MAX_RECONNECT_DELAY=60000
RECONNECT_BACKOFF_MULTIPLIER=2
